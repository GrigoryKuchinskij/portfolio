<Page
    x:Class="MJpegStreamViewerProj.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:viewmodels="using:MJpegStreamViewerProj.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainPageViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinWidth="240" MinHeight="160" d:DesignWidth="640" d:DesignHeight="480">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="0" Orientation="Horizontal" muxc:ScrollViewer.VerticalScrollBarVisibility="Disabled" FlowDirection="RightToLeft" Margin="7,0,7,0" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" FlowDirection="RightToLeft" muxc:ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="5,10,5,10" Height="61">
                <muxc:HyperlinkButton x:ConnectionId='8' x:Name="ShowExtendedOptionsBtn" Content="Дополнительные настройки" Command="{Binding ShowExtendedOptions}" VerticalAlignment="Center"  HorizontalAlignment="Center" FontSize="12" />
                <muxc:Button x:ConnectionId='9' x:Name="getChannelsBtn" Content="Получить список каналов" Command="{Binding GetChannels}" IsEnabled="{Binding GetChannelsButtonIsOn}" TabIndex="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
            <muxc:TextBox x:ConnectionId='7' x:Name="requestUriTBox" Text="{Binding UriForConfigRequest, Mode=TwoWay}" Header="Введите URL адрес запроса доступных каналов:" Visibility="{Binding PageDataObject.ExtendedOptionsIsOn}" PlaceholderText="URL" XYFocusKeyboardNavigation="Auto" TabIndex="1" VerticalAlignment="Bottom" Margin="5,10,5,10"/>
        </StackPanel>
        <ListBox x:ConnectionId='2' ItemsSource="{Binding PageDataObject.ChannelsList, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Grid.Row="1" SelectedIndex="{Binding SelectedIndex, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" x:Name="channelsListBox" Margin="0,0,0,0" TabIndex="2"/>
        <Grid x:ConnectionId='3' Grid.Row="1" x:Name="shadeListBoxGrid" Visibility="{Binding ShadeIsOn}" Background="Black" Margin="0,0,0,0" Opacity="0.5"/>
        <TextBlock x:ConnectionId='4' Text="{Binding CenterText, Mode=OneWay}" Grid.Row="1" x:Name="overListBoxCenterText" Visibility="{Binding CenterTextIsOn}" VerticalAlignment="Center" FontSize="30" TextAlignment="Center" Margin="25,0,25,0"/>
        <ProgressRing x:ConnectionId='5' x:Name="ListProgressRing" Visibility="{Binding ProgressRingIsOn}" IsActive="{Binding ProgressRingIsOn}"  Grid.Row="1" Width="60" Height="60" />
        <TextBox x:ConnectionId='6' muxc:Grid.Row="2" x:Name="streamURITBox" Text="{Binding PageDataObject.StreamURI, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding PageDataObject.ExtendedOptionsIsOn}"  Header="URL адрес запроса видеопотока с сервера:" PlaceholderText="URL" Margin="10,10,10,10" VerticalAlignment="Center" TabIndex="3" Height="55" />
    </Grid>
</Page>

